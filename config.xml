<?xml version='1.0' encoding='utf-8'?>
<widget id="org.devgirl.onsen2angular.mediafinder" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>media-finder-onsen2-angular</name>
    <description>
        A sample app to show the use of Onsen UI Beta 2 with AngularJS. Find media using the iTunes Search API and play it.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Adobe PhoneGap Team
    </author>
    <content src="index.html" />

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <plugin name="cordova-plugin-transport-security" spec="~0.1.1" />
    <plugin name="cordova-plugin-media" spec="~1.0.1" />

    <!--
     If you don't add the status bar plugin the text color of the Status Bar is always black (good on light background).
     If you add the status bar plugin the default is then white text (better on dark background colors). The following
     preference is automatically added by the cordova-plugin-statusbar in the config.xml under the ios platform to
     cause the text color to be light. It can be changed to a value of 'default' to make it black again. Leaving in
     here just for reference and if it needs to be overridden it can be below. See the plugin readme for details:
     - https://github.com/apache/cordova-plugin-statusbar
     -->
    <preference name="StatusBarStyle" value="lightcontent" />
</widget>
